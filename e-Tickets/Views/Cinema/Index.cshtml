@{
    ViewData["Title"] = "Cinema";
}
@model IEnumerable<Cinema>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(m => m.Logo)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
           <tbody>
               @foreach(var obj in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@obj.Logo" alt="@obj.Name" style="max-width:150px">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m => obj.Name)
                        </td>
                        <td class="align-middle">
                             @Html.DisplayFor(m => obj.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a class="btn btn-sm text-white btn-info"><i class="bi bi-eye"></i> Details</a>
                            <a class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div class="text-white d-md-block d-none" style="position:fixed;right:25px;bottom:25px" >
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add new</a>
</div>