@model CinemaViewModel
@{
    ViewData["Title"] = "New Actor";
}

<div class="row text">
    <div class="col-md-8 offset-md-2">
        <p>
            <h1>Add New Cinema</h1>
        </p>
        <div class="row">
             <div class="col-md-8 offset-md-2">
                 <form aasp-action="Create" method="post" >
                     <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                     <div class="form-group text-center m-1">
                         <img id="PictureView" />
                     </div>
                     <div class="form-group m-1">
                         <label asp-for="Logo" class="control-label"></label>
                         <input asp-for="Logo" class="form-control" />
                         <span asp-validation-for="Logo" class="text-danger"></span>
                     </div>
                      <div class="form-group m-1">
                         <label asp-for="Name" class="control-label"></label>
                         <input asp-for="Name" class="form-control" />
                         <span asp-validation-for="Name" class="text-danger"></span>
                     </div>
                      <div class="form-group m-1">
                         <label asp-for="Description" class="control-label"></label>
                         <input asp-for="Description" class="form-control" />
                         <span asp-validation-for="Description" class="text-danger"></span>
                     </div>
                      <div class="form-group m-1">
                     
                         <input type="submit" value="Add" class="btn btn-outline-success float-end" />
                         <a  class="btn btn-outline-secondary"  asp-action="Index">Back</a>
                     </div>
                 </form>
                 
             </div>
        </div>
      
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            var out = document.getElementById('PictureView');
            out.src = $("#Logo").val();
        })
        $("#Logo").on("change", function() {
            var out = document.getElementById('PictureView');
            out.src = $(this).val();
        })
    </script>
}