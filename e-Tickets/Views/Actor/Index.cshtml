@{
    ViewData["Title"] = "Actor";
}
@model IEnumerable<Actor>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead >
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Picture)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
           <tbody>
               @foreach(var actor in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@actor.Picture" alt="@actor.Name" style="max-width:150px">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m => actor.Name)
                        </td>
                        <td class="align-middle">
                             @Html.DisplayFor(m => actor.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a class="btn btn-sm text-white btn-info"><i class="bi bi-eye"></i> Details</a>
                            <a class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>